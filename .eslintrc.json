{
  "$schema": "https://json.schemastore.org/eslintrc",
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended",
    "plugin:import/recommended",
    "plugin:import/warnings"
  ],
  "plugins": ["tailwindcss", "filenames", "import"],
  "ignorePatterns": ["components/svg.tsx"],
  "rules": {
    "filenames/match-regex": ["error", "^[a-z0-9]+(-[a-z0-9]+)*(.test|.mock|.config|.d)?$"],
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "parent", "sibling", "index", "object", "type"],
        "pathGroups": [
          {
            "pattern": "{react,react-dom/**,react-router-dom}",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "{next,next/**,next-auth,next-auth/**,@next-auth/**}",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@prisma/**",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@/**",
            "group": "parent",
            "position": "before"
          },
          {
            "pattern": "@/styles/**",
            "group": "parent",
            "position": "after"
          },
          {
            "pattern": "./**.module.css",
            "group": "index",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
