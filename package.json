{
  "name": "nextjs-boilerplate-app-dir",
  "version": "0.1.0",
  "packageManager": "yarn@3.5.1",
  "private": true,
  "engines": {
    "node": ">=16.0.0 <=18.x.x"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test:quick"
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "postinstall": "husky install && prisma generate",
    "prisma:db:push": "prisma db push",
    "prisma:db:seed": "prisma db seed",
    "dev": "next dev",
    "dev:proxy": "next dev -p 3001 & local-ssl-proxy --key ./certs/private.key --cert ./certs/certificate.crt --source 3000 --target 3001",
    "test": "env-cmd -f ./.env.test npm-run-all -p lint prettier:check depcruise jest component:headless",
    "test:quick": "npm-run-all -p lint prettier:check",
    "build": "prisma generate && next build",
    "build:test": "env-cmd -f ./.env.test yarn build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --write --ignore-path .prettierignore './**/*.{js,jsx,ts,tsx,json,css}'",
    "prettier:check": "prettier --check --ignore-path .prettierignore './**/*.{ts,tsx,json,css}'",
    "format": "yarn lint:fix && yarn prettier",
    "depcruise": "depcruise -v .dependency-cruiser.js './src'",
    "jest": "jest",
    "jest:watch": "jest --watchAll",
    "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "component": "cypress open --component",
    "component:headless": "cypress run --component"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cypress": "^12.13.0",
    "dependency-cruiser": "^13.0.2",
    "env-cmd": "^10.1.0",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-tailwindcss": "^3.12.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "local-ssl-proxy": "^2.0.5",
    "nock": "^13.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "postcss-color-function": "^4.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "prisma": "4.14.1",
    "start-server-and-test": "^2.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.18",
    "@next-auth/prisma-adapter": "^1.0.6",
    "@prisma/client": "^4.14.1",
    "@t3-oss/env-nextjs": "^0.3.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "next": "13.4.3",
    "next-auth": "^4.22.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-loader-spinner": "^5.3.4",
    "server-only": "^0.0.1",
    "swr": "^2.1.5",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "zod": "^3.21.4"
  }
}
